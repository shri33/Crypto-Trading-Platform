# This is an example .env file for local development
# Copy this file as config.env and update with your actual credentials

# The HTTP port to run the application on
PORT=4000

# MongoDB connection string
# For MongoDB Atlas, use format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>
# For local MongoDB, use: mongodb://localhost:27017/your-database-name
MONGO_URI=mongodb://localhost:27017/corex-defi

# JWT secret and expiry
# Generate a secure random string for production
JWT_SECRET=your-secure-jwt-secret-min-32-characters-long
JWT_EXPIRE=7d

# Cookie expiry & key and value
COOKIE_EXPIRE=5
COOKIE_VAL=0

DEV_API_KEY=your-dev-api-key

# Stripe API Key & Secret Key (Optional)
STRIPE_API_KEY=
STRIPE_SECRET_KEY=

# SendGrid API Key (Optional)
SENDGRID_API_KEY=

# Frontend URL for CORS
FRONTEND_URL=http://localhost:8080
